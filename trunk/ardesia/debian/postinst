#! /bin/sh
# postinst script for ardesia
#
# see: dh_installdeb(1)

[ -x "`which xdg-icon-resource`" ] && xdg-icon-resource install --mode system --novendor --context mimetypes --size 48 /usr/local/share/ardesia/ui/pixmaps/application-x-iwb.png >/dev/null
[ -x "`which xdg-mime`" ] && xdg-mime install --mode system /usr/local/share/ardesia/ui/iwb-mime.xml >/dev/null
[ -x "`which xdg-desktop-menu`" ] && xdg-desktop-menu install --mode system --novendor /usr/local/share/applications/ardesia.desktop >/dev/null
