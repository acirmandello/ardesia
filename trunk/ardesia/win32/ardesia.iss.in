DefaultDirName={pf}\Ardesia
DefaultGroupName=Ardesia
LicenseFile=ardesia_@VERSION@-windows-1_i386\COPYING
InfoBeforeFile=ardesia_@VERSION@-windows-1_i386\NEWS
